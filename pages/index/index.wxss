.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #bad;
  width: 100%;
  height: 230rpx;
  margin-top: 1rpx;
}
.people{
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: white;
  width: 100%;
  height: 150rpx;
  margin-top: 8rpx;
  justify-content: space-between;
}
.geren{
   width: 70%;
   height: 150rpx;
   padding-top: 100rpx;
   padding-left: 40rpx;
}
.fuhao{

   width: 30%;
   height: 150rpx;
   text-align: right;
   padding-top: 100rpx;
   padding-right: 40rpx;
}
.people-else{
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: white;
  width: 100%;
  height: 100rpx;
  margin-top: 17rpx;
  justify-content: space-between;
}
.geren-else{
   width: 70%;
   height: 100rpx;
   padding-top: 50rpx;
   padding-left: 40rpx;
}
.fuhao-else{

   width: 30%;
   height: 100rpx;
   text-align: right;
   padding-top: 50rpx;
   padding-right: 40rpx;
}


.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  padding-left: 8px;
  color:#eee;
}

.usermotto {
  margin-top: 200px;
}